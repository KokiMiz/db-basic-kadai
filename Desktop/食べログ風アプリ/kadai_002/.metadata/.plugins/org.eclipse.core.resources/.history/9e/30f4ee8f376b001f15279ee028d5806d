document.addEventListener('DOMContentLoaded', function () {
    let maxDate = new Date();
    maxDate.setMonth(maxDate.getMonth() + 3);

    flatpickr('#fromCheckinDateToCheckoutDate', {
        locale: 'ja',
        minDate: 'today',
        maxDate: maxDate,
        dateFormat: "Y-m-d",  // 表示形式を指定
        enableTime: false,    // 時間選択を無効に
    });
});